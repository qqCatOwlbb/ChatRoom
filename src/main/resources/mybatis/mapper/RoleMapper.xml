<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.catowl.chatroom.mapper.RoleMapper">

    <select id="findRolesByUserId" resultType="com.catowl.chatroom.model.entity.Role">
        SELECT r.id, r.name
        FROM role r
                 JOIN user_role ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId}
    </select>

    <select id="findRoleByName" resultType="com.catowl.chatroom.model.entity.Role">
        SELECT id, name
        FROM role
        WHERE name = #{roleName}
    </select>

    <insert id="insertUserRole">
        INSERT INTO user_role (user_id, role_id)
        VALUES (#{userId}, #{roleId})
    </insert>
</mapper>